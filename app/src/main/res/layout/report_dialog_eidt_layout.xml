<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="341dp"
    android:layout_height="332dp"
    android:background="@drawable/report_edit_background">

    <TextView
        android:id="@+id/report_dialog_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/report_edit_point"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="41dp"/>

    <TextView
        android:layout_width="118dp"
        android:layout_height="26dp"
        android:text="编辑报告信息"

        android:textColor="#444c72"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:text="报告："
        android:textColor="#444c72"
        android:textSize="17sp"
        android:gravity="left"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="88dp"/>


    <TextView
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:text="审核："
        android:textColor="#444c72"
        android:textSize="17sp"
        android:gravity="left"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="146dp"/>

    <EditText
        android:id="@+id/report_dialog_et_report"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical|right"
        android:hint="请输入"
        android:textSize="15sp"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/report_dialog_et_review"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="137dp"
        android:gravity="center_vertical|right"
        android:hint="请输入"
        android:textSize="15sp"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"/>

    <Button
       android:id="@+id/report_dialog_btn_save"
       android:layout_width="165dp"
       android:layout_height="57dp"
       android:background="@drawable/report_dialog_btn_background"
       android:text="保存"
       android:textColor="#ffffff"
       android:textSize="17sp"
       android:layout_marginTop="233dp"
       android:layout_marginLeft="88dp"/>
    <View
        android:layout_width="258dp"
        android:layout_height="0.8dp"
        android:background="#998fa2"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="127dp"
        />

    <View
        android:layout_width="258dp"
        android:layout_height="0.8dp"
        android:background="#998fa2"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="186dp"
        />

</RelativeLayout>