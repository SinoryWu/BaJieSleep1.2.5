<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="225dp"
    android:background="@drawable/custom_dialog_background">

    <TextView
        android:id="@+id/tv_user_name"
        android:text="小明"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:textSize="25sp"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="32dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号："
        android:textColor="#998fa2"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="32dp"/>
    <TextView
        android:id="@+id/tv_user_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13512341234"
        android:textColor="#998fa2"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_marginTop="67dp"

        android:layout_toRightOf="@+id/tv_phone"/>

    <Button
        android:id="@+id/btn_call"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_cancel_background"
        android:text="呼叫"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginTop="157dp"
        android:layout_marginLeft="134dp"/>

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_send_background"
        android:text="复制"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginTop="157dp"
        android:layout_marginLeft="222dp"/>



</RelativeLayout>