<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TestActivity">
    <EditText
        android:id="@+id/home_search"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:layout_width="328dp"
        android:layout_height="38dp"
        android:background="@drawable/search_user_edittext_background"
        android:paddingLeft="48dp"
        android:textColor="#8e8e92"
        android:textSize="17sp"
        android:maxLines="1"
        android:maxLength="14"
        android:singleLine="true"
        android:imeOptions="actionDone"
        />

    <ImageView
        android:id="@+id/search_user_icon"
        android:layout_width="18dp"
        android:layout_height="17dp"
        android:src="@drawable/search_ico"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="37dp"/>
    <RelativeLayout
        android:id="@+id/setTimeLayout"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="195dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:text="cececececce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="接受推送时间"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPushTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"

            android:text="07:00 - 09:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_token_intent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TokenIntent"/>

</RelativeLayout>