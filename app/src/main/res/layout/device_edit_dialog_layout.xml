<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="341dp"
    android:layout_height="332dp"
    android:background="@drawable/device_stop_dialog_background">

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/device_stop_dialog_point"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="36dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="编辑设备"
        android:textColor="#444c72"
        android:textSize="19sp"
        android:gravity="left"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="65dp"/>

    <RelativeLayout
        android:id="@+id/device_stop_rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="请选择设备状态"
            android:textColor="#444c72"
            android:textSize="17sp"
            android:gravity="left"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="88dp"/>



        <TextView
            android:id="@+id/device_edit_dialog_left"
            android:layout_width="99dp"
            android:layout_height="44dp"
            android:text="维修"
            android:textColor="#444c72"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/device_edit_dialog_background_left_false"/>
        <TextView
            android:id="@+id/device_edit_dialog_mid"
            android:layout_width="99dp"
            android:layout_height="44dp"
            android:text="维保"
            android:textColor="#444c72"
            android:textSize="15sp"
            android:gravity="center"

            android:layout_marginTop="155dp"
            android:layout_toRightOf="@+id/device_edit_dialog_left"
            android:background="@drawable/device_edit_dialog_background_mid_false"/>
        <TextView
            android:id="@+id/device_edit_dialog_right"
            android:layout_width="99dp"
            android:layout_height="44dp"
            android:text="闲置"
            android:textColor="#444c72"
            android:textSize="15sp"
            android:gravity="center"

            android:layout_marginTop="155dp"
            android:layout_toRightOf="@+id/device_edit_dialog_mid"
            android:background="@drawable/device_edit_dialog_background_right_false"/>

        <Button
            android:id="@+id/device_edit_btn"
            android:layout_width="99dp"
            android:layout_height="57dp"
            android:background="@drawable/device_edit_dialog_background_btn"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginTop="246dp"
            android:layout_marginLeft="121dp"/>

        <TextView
            android:id="@+id/device_edit_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"/>


    </RelativeLayout>




</RelativeLayout>