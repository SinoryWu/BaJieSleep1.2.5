<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".PushSetActivity">

    <HorizontalScrollView
        android:id="@+id/push_set_titles"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="27dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/push_set_horizontal_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/push_set_liner_left"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="17dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="17dp"
            android:src="@drawable/arrow_black_left"
            />
    </LinearLayout>

    <View
        android:layout_width="275dp"
        android:layout_height="1.5dp"
        android:background="#eeeeee"
        android:layout_marginTop="262dp"
        android:layout_marginLeft="69dp"/>
    <View
        android:layout_width="275dp"
        android:layout_height="1.5dp"
        android:background="#eeeeee"
        android:layout_marginTop="319dp"
        android:layout_marginLeft="69dp"/>
    <View
        android:layout_width="275dp"
        android:layout_height="1.5dp"
        android:background="#eeeeee"
        android:layout_marginTop="377dp"
        android:layout_marginLeft="69dp"/>

    <View
        android:layout_width="275dp"
        android:layout_height="1.5dp"
        android:background="#eeeeee"
        android:layout_marginTop="434dp"
        android:layout_marginLeft="69dp"/>


    <TextView
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:text="设备上线通知"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="left"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="68dp"/>
    <TextView
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:text="戒指上线通知"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="left"
        android:layout_marginTop="337dp"
        android:layout_marginLeft="68dp"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:text="收到报告通知"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="left"
        android:layout_marginTop="394dp"
        android:layout_marginLeft="68dp"/>

    <ImageView
        android:id="@+id/push_set_iv_device_false"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_false_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="277dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/push_set_iv_ring_false"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_false_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="333dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/push_set_iv_report_false"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_false_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="391dp"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/push_set_iv_device_true"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_true_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="277dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/push_set_iv_ring_true"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_true_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="333dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/push_set_iv_report_true"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:src="@drawable/push_set_true_icon"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="391dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/push_set_iv_hospital_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/push_set_hospital_pic_icon"
        android:scaleType="fitXY"/>

</RelativeLayout>